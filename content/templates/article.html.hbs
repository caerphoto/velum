{{> header}}
  <body class="article">
    <header>
      <div class="home-link-box">
        <a href="/">&larr; article index</a>
      </div>
      <h1>{{article.title}}</h1>
    </header>

    <section id="content">
      <h3>{{date_from_timestamp article.timestamp}}</h3>
      {{{article.content}}}
    </section>

    <nav class="next-prev">
      <p>More articles:</p>
      {{#if prev}}
      <div class="nav-prev">
        <a href="{{prev.route}}">&larr; {{prev.title}}</a>
      </div>
      {{else}}
      <span class="empty"></span>
      {{/if}}
      <span class="nav-sep">&middot;</span>
      {{#if next}}
      <div class="nav-next">
        <a href="{{next.route}}">{{next.title}} &rarr;</a>
      </div>
      {{else}}
      <span class="empty"></span>
      {{/if}}
    </nav>

    {{> footer}}
  </body>
</html>
