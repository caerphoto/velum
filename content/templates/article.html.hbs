{{> header}}
  <body class="article">
    <header>
      <div class="home-link-box">
        <a href="{{return_path}}">&larr; article index</a>
      </div>
      <h1>{{article.title}}</h1>
    </header>

    <article>
      <section id="article-body" class="post-content">
        <h3 class="timestamp">{{date_from_timestamp article.timestamp}}</h3>
        {{#with article}}
          {{> tag_list search_tag="" }}
        {{/with}}
        {{{article.content}}}
      </section>

      {{> comments}}

    </article>

    <nav class="next-prev">
      <p>More articles:</p>
      {{#if prev}}
      <div class="nav-prev">
        <a href="/articles/{{prev.slug}}">&larr; {{prev.title}}</a>
      </div>
      {{else}}
      <span class="empty"></span>
      {{/if}}
      <span class="nav-sep">&middot;</span>
      {{#if next}}
      <div class="nav-next">
        <a href="/articles/{{next.slug}}">{{next.title}} &rarr;</a>
      </div>
      {{else}}
      <span class="empty"></span>
      {{/if}}
    </nav>

    {{> footer}}
    <script src="/assets/comments.js"></script>
  </body>
</html>
